/**
 * TypeScript 配置文件
 * 
 * 功能说明：
 * - 配置 TypeScript 编译器选项
 * - 设置路径别名以简化导入语句
 * - 定义包含和排除的文件范围
 * 
 * 主要配置项：
 * - strict: 启用严格类型检查
 * - moduleResolution: 使用 Node.js 模块解析策略
 * - baseUrl: 设置基础路径为 ./src
 * - paths: 配置路径别名映射，使用 @ 前缀简化导入
 */
{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/screens/*": ["screens/*"],
      "@/store/*": ["store/*"],
      "@/services/*": ["services/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/localization/*": ["localization/*"]
    }
  },
  "include": [
    "src/**/*",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}